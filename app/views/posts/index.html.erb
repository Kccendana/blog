<%= render "helpers/users_list", user: @user %>
    <ul class="post users_container">
         <% @user.posts.each do |post| %>
         <%= link_to user_post_path(@user.id, post.id) do %>
            <%= render 'helpers/post', post: post %>
          <% end %>
        <% end %>
    </ul>
     <div class="link_user_posts">
    <%= link_to "New Post", new_user_post_path(user_id: @user.id) %>
  </div>

