<%= form_with model: @post, url: user_posts_path, local: true do |form| %>
  <h1>New post here</h1>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :text %><br>
    <%= form.text_area :text, class: 'form-textarea'%><br>
    <% @post.errors.full_messages_for(:text).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit 'Create Post', class: 'submit-btn'%>
  </div>
<% end %>
