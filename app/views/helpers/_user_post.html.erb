<% user.recent_posts.each do |post| %>
    <li>
    <div class='user-post'>
        <div class='user-post-details'>
        <h2><%= post.title %></h2>
        <p><%= post.text %></p>
        </div>
    </div>
    <div class='comments-likes'>
        <span>
            Comments:<%= post.comments_counter.nil? ? '0' : post.comments_counter %>
          </span>
          <span>
            Likes:<%= post.likes_counter.nil? ? '0' : post.likes_counter %>
          </span>
    </div>
    </li>
<% end %>