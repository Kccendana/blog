<h2 class="text-center font-semibold text-3xl py-5">Sign up</h2>

<div class="form-section flex justify-center my-10">
  <div class="form-container p-10">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Username', class: 'border my-3 py-1 px-3' %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'border my-3 py-1 px-3' %>
      </div>

      <div class="field">
        <%= f.label :bio %><br />
        <%= f.text_area :bio, autofocus: true, autocomplete: "bio", placeholder: 'Bio', class: 'border my-3 py-1 px-3' %>
      </div>

      <div class="field">
        <%= f.label :photo %><br />
        <%= f.text_field :photo, autofocus: true, autocomplete: "photo", placeholder: 'Photo URL', class: 'border my-3 py-1 px-3' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'border my-3 py-1 px-3' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'border my-3 px-3 py-1' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'border px-3 py-1 rounded-md' %>
      </div>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>